<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="cmu.sv.flubber.ihere">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="iHere"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ui.HomeActivity"
            android:label="iHere"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.LoginActivity"
            android:label="iHere"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ui.HistoryActivity"
            android:label="@string/title_item_list"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ui.ItagDetailActivity"
            android:label="@string/title_item_detail"
            android:parentActivityName=".ui.HistoryActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ui.HistoryActivity" />
        </activity>
        <activity
            android:name=".ui.SignupActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ui.DiscoveryActivity"
            android:label="@string/title_activity_discovery"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".ui.CreateActivity"></activity>
    </application>

</manifest>
