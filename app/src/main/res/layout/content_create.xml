<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="0dp"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".ui.CreateActivity"
    tools:showIn="@layout/activity_create">

    <!-- Email Label -->
    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:id="@+id/textInputLayout"
        android:layout_marginBottom="8dp">
        <EditText android:id="@+id/create_tag"
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:hint="Tag Content..."
            android:background="@drawable/border"
            android:gravity="top"/>
    </android.support.design.widget.TextInputLayout>

    <!-- Password Label -->

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btn_create_tag"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"

        android:layout_alignRight="@+id/textInputLayout"
        android:layout_alignEnd="@+id/textInputLayout"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="24dp"
        android:padding="12dp"
        android:textColor="#FFFFFF"
        android:background="@color/colorAccent"
        android:text="Create"/>

</LinearLayout>
